<div class="container">
<%= form_for :masterpiece, url: masterpieces_path, :html=>{:class =>'form-horizontal'} do |f| %>
<div>
  <%= f.label :titre %><br>
  <%= f.text_field :titre, :required => true, :class => "form-control" %>
</div>
<div>
  <%= f.label :date %><br>
  <%= f.text_field :date, :class => "form-control" %>
</div>
<div>
  <%= f.label :text %><br>
  <%= f.text_area :text, :class => "form-control" %>
</div>

<div style="margin-top:15px;">
<%= f.select(:feature, [
    ['Perfection', 'perfection'],
    ['Beaute', 'beaute'],
    ['Abouti', 'abouti'],
    ['Merveille', 'merveille'],
    ['Savant', 'savant'],
    ['Terre', 'terre'],
  ], {}, :class => "form-control") %>
</div>

<div>
  <%= f.label :image %>
  <%= f.file_field :image, :required => true, :class => 'form-control' %>
</div>

<div>
  <%= f.label :image2 %>
  <%= f.file_field :image2, :class => 'form-control' %>
</div>

<div>
  <%= f.label :image3 %>
  <%= f.file_field :image3, :class => 'form-control' %>
</div>

<div>
  <%= f.label :video %><br>
  <%= f.text_field :video, :class => "form-control" %>
</div>

<div>
  <%= f.label :legend %><br>
  <%= f.text_field :legend, :class => "form-control" %>
</div>


<p id="myBtn">
  <%= f.submit :class => "btn btn-success" %>
</div>
<% end %>
</div>

<div id="myBtn">
  <%= link_to 'Retour', masterpieces_path, :class => "btn btn-success" %>
</div>
